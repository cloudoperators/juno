{
  "name": "@cloudoperators/juno-k8s-client",
  "version": "1.0.3",
  "author": "UI-Team",
  "description": "JavaScript client for Kubernetes API",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "files": [
    "dist/**",
    "LICENCE"
  ],
  "scripts": {
    "build": "rm -rf dist && esbuild src/*.js --bundle --minify --outdir=dist/esm --bundle=false --format=esm  && esbuild src/*.js --bundle --minify --outdir=dist/cjs --bundle=false --format=cjs",
    "test": "jest test",
    "lint": "eslint .",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo"
  },
  "keywords": [
    "kubernetes",
    "js",
    "typescript",
    "client"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      ".js": "babel-jest"
    }
  },
  "devDependencies": {
    "@cloudoperators/juno-eslint-config": "*",
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.21.0",
    "jest": "^29.7.0"
  }
}
