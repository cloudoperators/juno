{
  "name": "@cloudoperators/juno-package-template",
  "version": "1.1.2",
  "description": "Package template that will be use to generate new juno packages",
  "author": "UI-Team",
  "source": "src/index.js",
  "main": "build/index.js",
  "module": "build/index.js",
  "license": "Apache-2.0",
  "type": "module",
  "types": "build/types/index.d.ts",
  "files": [
    "build/**",
    "LICENCE"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint ",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build && rm -rf node_modules && rm -rf .turbo",
    "clean:cache": "rm -rf .turbo"
  },
  "devDependencies": {
    "@cloudoperators/juno-config": "*",
    "@types/node": "^20.11.24",
    "jsdom": "^24.1.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.3",
    "vitest": "^3.0.7"
  }
}
